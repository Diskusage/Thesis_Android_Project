<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.greenpass">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:configChanges="layoutDirection|locale"
        android:theme="@style/Theme.SQLiteApp">
        <activity android:name=".activities.main.MainActivity" android:configChanges="layoutDirection|locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.login.LoggedInActivity"
            android:label="@string/title_activity_logged_in_2nd"
            android:configChanges="layoutDirection|locale"
            android:theme="@style/Theme.SQLiteApp.NoActionBar" />
        <activity
            android:name=".activities.vaccdb.DatabaseVaccinationActivity"
            android:configChanges="layoutDirection|locale"
            />
        <activity
            android:name=".activities.testdb.DatabaseTestActivity"
            android:configChanges="layoutDirection|locale"
            />
        <activity
            android:name=".activities.persondb.DatabasePersonActivity"
            android:configChanges="layoutDirection|locale"
            />
    </application>

</manifest>